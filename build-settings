program = "trylon"
debugging = true

# Needed for Interpreter (and X86Compiler) to work.
support-perform = true
support-subprotos = true




# Archaic stuff.

iff !trylon-2
	# Trylon 1 boilerplate.
	c-flags += "-g"
	link-flags += "-lgc" "-ldl" "-lm"

	if Darwin
		c-flags += "-DMAC_OSX" "-DOSX_FINK" "-I/sw/include"
		link-flags += "-L/sw/lib"


iff in-jolt
	jolt-sources-dir = ".jolt-sources-self"

