Class: FloatLiteral
Superclass: Expression


value: Float;
index: Int; 	// The MethodBuilder will set this.


create(value: String)
{
	this.value = value.as-float;
}


prepare-to-emit()
{
	// Nothing to do.
}


emit-code(builder: MethodBuilder): ExpressionResult
{
	builder.add-float-literal(this); 	// the "index" gets set here
	return new FloatLiteralResult(index);
}


emit-package-literal(stream: OutputStream): ExpressionResult
{
	stream.write("DefineFloat_(");
	stream.write(index.string);
	stream.write(", ");
	stream.write(value.string);
	stream.write(")");
	stream.write-line();

	return new FloatLiteralResult(index);
}


