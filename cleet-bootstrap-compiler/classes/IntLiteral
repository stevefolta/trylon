Class: IntLiteral
Superclass: Expression


value: Int;
index: Int; 	// The MethodBuilder will set this.


create(value: String)
{
	this.value = value.as-int;
}


prepare-to-emit()
{
	// Nothing to do.
}


emit-code(builder: MethodBuilder): ExpressionResult
{
	builder.add-int-literal(this);	// the "index" gets set here
	return new IntLiteralResult(index);
}


emit-package-literal(stream: OutputStream): ExpressionResult
{
	stream.write("DefineInt_(");
	stream.write(index.string);
	stream.write(", ");
	stream.write(value.string);
	stream.write(")");
	stream.write-line();

	return new IntLiteralResult(index);
}


