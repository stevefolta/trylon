trylon BytePtrFunction


c-fn call: name with: args
	void* result;
	CallFFI_(name, args, &ffi_type_pointer, &result);
	return BuildBytePtr_(result);


new: name
	return NamedFunction new: name

class NamedFunction
	superclass BytePtrFunction
	fields name

	create: name
		this name = name
	
	call: args
		return call: name with: args


c-preamble
	#ifdef MAC_OSX
		#define MACOSX 	// Aargh!
		#include <ffi/ffi.h>
	#else
		#include <ffi.h>
	#endif

	extern void CallFFI_(obj_ fn_name, obj_ args, ffi_type* result_type, void* result);


