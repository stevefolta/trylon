trylid Object

raw-new
	# Use Pepsi's "Object new".
	# We want this, once super calls are implemented:
	# return super new
	coke
		(let ((vtable (send (quote _vtable) self))
		      (size (send (quote _sizeof) self)))
			(return (send (quote _alloc:) vtable size)))

object-ptr -> BytePtr
	coke
		(byte-ptr self)

is-a: proto -> Bool
	cur-proto = .proto
	while cur-proto
		if cur-proto == proto
			return true
		cur-proto = cur-proto .parent-context

string
	return "a " + this .proto-name

same-as: object
	return object != nil && this object-ptr == object object-ptr

fn == other
	return this same-as: other

fn != other -> Bool
	return !(this == other)

iterator -> Iterator
	# Default: use a SingleObjectIterator.  Collections will 
	# override this.
	return SingleObjectIterator new: this



# Debugging

iff debugger
	fn debug-write
		print-line: .proto-name
		num-fields := 0 	#...
		which-field := 0
		while which-field < num-fields
			field := object-ptr object-at: (which-field + 1)
			if field == nil
				print-line: "  nil"
			else
				print-line: "  (" + field object-ptr string + ") " + field debug-string
			which-field += 1
	
	fn debug-string
		return this string

