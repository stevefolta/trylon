trylon Int

extend Standard Int
	c-preamble
		#include <stdio.h>
		#define Val	(IntValue_(this_))

	c-fn new
		return CloneObjExtra_(Proto_(Int__Standard), 1);
	

	c-fn + other
		return BuildInt_(Val + IntValue_(other));

	c-fn - other
		return BuildInt_(Val - IntValue_(other));

	c-fn * other
		return BuildInt_(Val * IntValue_(other));

	c-fn / other
		return BuildInt_(Val / IntValue_(other));

	c-fn % other
		return BuildInt_(Val % IntValue_(other));

	c-fn unary-minus
		return BuildInt_(-Val);
	

	c-fn == other
		return Bool_(Val == IntValue_(other));

	c-fn != other
		return Bool_(Val != IntValue_(other));

	c-fn < other
		return Bool_(Val < IntValue_(other));

	c-fn <= other
		return Bool_(Val <= IntValue_(other));

	c-fn > other
		return Bool_(Val > IntValue_(other));

	c-fn >= other
		return Bool_(Val >= IntValue_(other));


	c-fn | other
		return BuildInt_(Val | IntValue_(other));

	c-fn & other
		return BuildInt_(Val & IntValue_(other));

	c-fn ^ other
		return BuildInt_(Val ^ IntValue_(other));
	
	c-fn ~
		return BuildInt_(~Val);
	
	c-fn << other
		return BuildInt_(Val << IntValue_(other));

	c-fn >> other
		return BuildInt_(Val >> IntValue_(other));


	c-fn string
		char str[64];
		sprintf(str, "%d", Val);
		return BuildString_(str);
	
	c-fn char-string
		char str[4];
		str[0] = Val;
		str[1] = 0;
		return BuildString_(str);
	
	c-fn float
		return BuildFloat_(Val);
	
	c-fn is-digit
		int val = Val;
		return Bool_(val >= '0' && val <= '9');
	
	c-fn is-whitespace
		int val = Val;
		return Bool_(val == ' ' || val == '\t' || val == '\n' || val == '\r');



