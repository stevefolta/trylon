trylon-package EventManager

primitive-fn event-not-handled -> Int

primitive-fn run-application-event-loop

class MouseTrackingResult
	fields track-result point
	field modifiers 	# Only track-mouse-location:options:timeout: returns this.
primitive-fn track-mouse-location: port
primitive-fn track-mouse-location: port options: options timeout: timeout

primitive-fn post-event-to-current-queue: event

# Helpers for primitives

primitive-fn value-for-symbol: symbol -> Int
primitive-fn four-char-value: value -> Int

fn used-symbols
	# These are the symbols used by the primitive functions.
	# They're here so the compiler will generate them.
	
	# Event classes
	'mouse'
	'keyboard'
	'text-input'
	'application'
	'apple-event'
	'menu'
	'window'
	'control'
	'command'
	'tablet'
	'volume'
	'appearance'
	'service'
	'toolbar'
	'toolbar-item'
	'accessibility'
	
	# Event kinds
	'mouse-down'
	'mouse-up'
	'mouse-moved'
	'mouse-dragged'
	'mouse-entered'
	'mouse-exited'
	'mouse-wheel-moved'
	'update'
	'draw-content'
	'content-click'
	'update-active-input-area'
	'unicode-for-key-event'
	'offset-to-pos'
	'pos-to-offset'
	'show-hide-bottom-window'
	'get-selected-text'
	'unicode-text'
	
	# Parameter types
	'mouse-location'
	'window-mouse-location'
	'mouse-button'
	'key-modifiers'
	'click-count'
	'send-text'
	
	# Parameter values
	'primary'
	'secondary'
	'tertiary'
	
	# Mouse tracking results
	# Many are already event kinds above.
	'key-modifiers-changed'
	'user-cancelled'
	'timed-out'


