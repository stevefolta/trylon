trylon CFiles

fields files


create
	files = List new


add: name is-changed: is-changed
	files append: (CFile new: name is-changed: is-changed)

add-package: package is-changed: is-changed
	files append: (CFile new-package: package is-changed: is-changed)


iterator
	return files iterator


remainder-after: after-file
	remainder = files
	while !remainder is-empty && remainder first-item != after-file
		remainder = remainder tail
	
	result = CFiles new
	result files = remainder tail
	return result

