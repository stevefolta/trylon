c-fn create: surface
	UsingMethod_(primitive_surface)
	Field_(cairo) =
		BuildBytePtr_(
			cairo_create(
				(cairo_surface_t*) BytePtrValue_(Call_(primitive_surface, surface))));

c-fn close
	Preamble_
	cairo_destroy(cairo);
	Field_(cairo) = nil;

destroy
	close

