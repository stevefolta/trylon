c-fn current-point
	Preamble_
	UsingClass_(Point__Standard)
	extern obj_ new_co_y_co___Point__Standard(obj_, obj_, obj_);
	double x, y;
	cairo_get_current_point(cairo, &x, &y);
	return
		new_co_y_co___Point__Standard(
			Proto_(Point__Standard), BuildFloat_(x), BuildFloat_(y));

