Class: Statement

comment: String;


prepare-to-emit()
{
	// Default: nothing to do.
}


emit-code(builder: MethodBuilder)
[phantom]



// Helper

add-comment(line: String): String
{
	if (comment)
		line += " \t/* " + comment + " */";
	return line;
}


add-comment(line: String, comment: String): String
{
	if (comment)
		line += " \t/* " + comment + " */";
	return line;
}


