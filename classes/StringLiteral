Class: StringLiteral
Superclass: Expression


value: String;
index: Int; 	// the MethodBuilder will set this


create(value: String)
{
	this.value = value;
}


prepare-to-emit()
{
	// Nothing to do.
}


emit-code(builder: MethodBuilder): ExpressionResult
{
	builder.add-string-literal(this);	// the "index" gets set here
	return new StringLiteralResult(index);
}


emit-package-literal(stream: OutputStream): ExpressionResult
{
	stream.write("DefineString_(");
	stream.write(index.string);
	stream.write(", \"");
	stream.write(value);
	stream.write("\")");
	stream.write-line();

	return new StringLiteralResult(index);
}


