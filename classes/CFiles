Class: CFiles

files: List of CFile;


create()
{
	files = new List of CFile;
}


add(name: String, is-changed: Bool)
{
	files.append(new CFile(name, is-changed));
}


iterator: ListIterator of CFile
{
	return files.iterator;
}


remainder-after(after-file: CFile): CFiles
{
	remainder: List of CFile = files;
	while (!remainder.is-empty && remainder.first-item != after-file)
		remainder = remainder.tail;

	result: CFiles;
	result.files = remainder.tail;
	return result;
}


