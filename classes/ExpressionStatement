Class: ExpressionStatement
Superclass: Statement


expression: Expression;


create(expression: Expression, comment: String)
{
	this.expression = expression;
	this.comment = comment;
}


prepare-to-emit()
{
	expression.prepare-to-emit();
}


emit-code(builder: MethodBuilder)
{
	saved-temp-num: Int = builder.next-temporary-num;
	expression.emit-code(builder);
	builder.next-temporary-num = saved-temp-num;
	if (comment)
		builder.add-line(add-comment(""));
}


