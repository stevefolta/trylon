Class: CatchClause
Superclass: Context


type: CompiledClass;
body: Block;
parent: Context;
comment: String;
pre-clause-comments: List of Statement;


create(type: CompiledClass, parent: Context, comment: String,
       pre-clause-comments: List of Statement)
{
	this.type = type;
	this.parent = parent;
	this.comment = comment;
	this.pre-clause-comments = pre-clause-comments;
}


lookup-function(name: String): TrylonFunction
{
	if (name == "exception")
		return new CaughtExceptionFunction();

	return parent.lookup-function(name);
}


enclosing-method-context: MethodContext
{
	return parent.enclosing-method-context;
}




