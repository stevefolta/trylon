trylon Interpreter

interpret: code
	context = InterpreterContext new: (Compiler ExistingProto new: Main)
	parser = Compiler Parser new: code context: context
	parse-tree = parser parse-code
	return parse-tree interpreted


# Helper.

interpret-send-of: name to: object with: arguments
	name = name intern
	num-args = arguments num-items
	obj = object interpreted
	args = Tuple new: num-args
	index = 0
	for arg in arguments
		args at: index put: arg interpreted
		index += 1
	result = nil
	switch num-args
		0
			result = object perform: name
		1
			result = object perform: name with: (args at: 0)
		2
			result = object perform: name with: (args at: 0) with: (args at: 1)
		3
			result = 	--
				object 	--
					perform: name --
					with: (args at: 0) with: (args at: 1) with: (args at: 2)
		4
			result = 	--
				object 	--
					perform: name --
					with: (args at: 0) with: (args at: 1) 	--
					with: (args at: 2) with: (args at: 3)
	return result



references
	Expressions
	Functions
	Statements
	InterpreterContext

