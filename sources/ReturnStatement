trylon ReturnStatement
superclass Statement

fields value


create: value comment: comment
	this value = value
	this comment = comment


prepare-to-emit
	value prepare-to-emit


jolt-expression
	# Coke's (return) form is broken, just fake it for now so we can flush out
	# other bugs.
	expression = Expression with: 'fake-return' with: value jolt-expression
	if comment
		comment-expression = Expression with: 'comment' with: comment
		expression = 	--
			Expression with: 'begin' with: expression with: comment-expression
	return expression


