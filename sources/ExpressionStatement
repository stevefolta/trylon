trylon ExpressionStatement
superclass Statement

fields expression


create: expression comment: comment
	this expression = expression
	this comment = comment


prepare-to-emit
	expression prepare-to-emit


jolt-expression
	if comment
		comment-expression = Expression with: 'comment' with: comment
		return 	--
			Expression with: 'begin' with: expression jolt-expression with: comment
	else
		return expression jolt-expression


