trylon WhileStatement
superclass Statement

fields condition body


create: condition body: body comment: comment
	this condition = condition
	this body = body
	this comment = comment


prepare-to-emit
	condition prepare-to-emit
	body prepare-to-emit


jolt-expression
	# (.trylid-while condition ...)
	expression = Expression with: 'while' with: condition jolt-expression
	if comment
		expression add: comment jolt-expression
	expression add: body jolt-expression
	return expression


