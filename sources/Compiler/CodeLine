trylon CodeLine

fields text block

create: text block: block
	this text = text
	this block = block

create: text
	this text = text
	this block = nil


words
	return TrylonWordsLexer new: text


flattened-block
	lines = List new
	if block
		for line in block
			line add-to-flattened-lines: lines
	return lines


flattened-block-text
	result = StringBuilder new
	for line in flattened-block
		result += line
		result += "\n"
	return result string


# ===== Private

add-to-flattened-lines: lines
	lines append: text
	if block
		for line in block
			line add-to-flattened-lines: lines



