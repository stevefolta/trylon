trylon CodeLine

fields text block

create: text block: block
	this text = text
	this block = block

create: text
	this text = text
	this block = nil


words
	return WordsLexer new: text


flattened-block
	lines = List new
	if block
		for line in block
			line add-to-flattened-lines: lines
	return lines



# ===== Private

add-to-flattened-lines: lines
	lines append: text
	if block
		for line in block
			line add-to-flattened-lines: lines



