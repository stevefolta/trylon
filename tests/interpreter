#!/usr/bin/env trylon

# Declaration, expression.
message = "Hello world!"
print-line: message

# "if".
if 2 < 3
	Standard print-line: "Yeh."
else
	Standard print-line: "Nah."

# "loop"
i = 0
loop
	Standard print-line: i string
	if i >= 3
		break
	i += 1
Standard print-line: "-----"

# "while"
i = 0
while i < 3
	Standard print-line: i string
	i += 1
Standard print-line: "-----"

# "for"
for char in "abc" characters
	if char == `b`
		continue
	Standard print-line: char char-string
Standard print-line: "-----"



